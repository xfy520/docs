{
  "compilerOptions": {
    "composite": false,
    "declaration": false,
    "declarationMap": false,
    "lib": [
      "DOM",
      "ES2020"
    ],
    "module": "es2020",
    "moduleResolution": "node",
    "newLine": "lf",
    "noEmitOnError": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "listEmittedFiles": true,
    "esModuleInterop": true,
    "removeComments": false,
    "skipLibCheck": true,
    "sourceMap": false,
    "strict": true,
    "strictNullChecks": true,
    "target": "ES2018",
    "outDir": "./lib/esm",
    "rootDirs": ["src/node", "src/shared"]
  },
  "files": [
    "src/index.ts",
    "src/client/config.ts",
  ],
  "exclude": [
    "node_modules"
  ],
}
